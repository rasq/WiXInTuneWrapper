Option Explicit

Dim strDateTime

strDateTime = GetDate() & "_" & GetTime()

LogInfo("          INFO IBM_CA_SET_DATE_TIME INFO: Current date and time: " & strDateTime)

Session.Property("IBM_DATE_TIME") = strDateTime
	
Function GetDate()
	GetDate = Year(Date) & "_" & Month(Date) & "_" & Day(Date)
End Function

Function GetTime()
	GetTime = hour(time) & "_" & minute(time) & "_" & second(time)
End Function

Function LogInfo(msg)
	Dim rec
	Set rec = Session.Installer.CreateRecord(1)
	rec.StringData(0) = msg
	LogInfo = Session.Message(&H04000000, rec)
End Function
